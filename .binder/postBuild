#!/usr/bin/env bash
set -euxo pipefail

# Ensure a Python kernel is available and named clearly for Thebe.
# Use the CLI to be compatible across ipykernel versions.
python -m ipykernel install \
  --user \
  --name python3 \
  --display-name "Python 3 (MindQuantum)" \
  || echo "Kernel install step skipped or failed (continuing)."
